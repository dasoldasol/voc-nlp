


import pandas as pd

# CSV 파일 불러오기
df = pd.read_csv('voc_reply_merged.csv')  # title + request_contents + reply 포함 파일
df['text'] = df['title'].fillna('') + ' ' + df['request_contents'].fillna('') + ' ' + df['reply'].fillna('')


# 유의어 사전 정의
조명_유의어 = ['전구', '형광등', '전등', '조명', '매립등', 'LED등', '등']
세면대_유의어 = ['세면대', '세면기', '세정대']
해충_유의어 = ['바퀴', '벌레', '파리', '해충', '유충', '벌']


# 최종 규칙 기반 분류 함수
def classify_final_final(text):
    topic = '기타'
    task = '기타'

    if any(x in text for x in ['출입 요청', '옥상 출입', '인원 요청', '출입 허가']):
        topic = '공간 출입 요청'
        task = '인원 파견'
        return pd.Series([topic, task])

    if any(word in text for word in 세면대_유의어) and any(x in text for x in ['불이 안', '전등', '불 안들어', '안들어와']):
        topic = '조명/전기'
        task = '전등 교체/점검'
        return pd.Series([topic, task])

    if any(x in text for x in ['변기막힘', '소변기 막힘', '소변기 막혔', '막힘']):
        topic = '화장실 관련'
        task = '배수 점검'
        return pd.Series([topic, task])

    if any(x in text for x in ['장치 누수', '설비 누수', '장치에서 누수', '베스트인', '장치']):
        topic = '설비/장비'
        task = '장치 누수 점검'
        return pd.Series([topic, task])

    if any(word in text for word in 세면대_유의어) and any(x in text for x in ['하부에서 물이 샙니다', '하부에서 물이 샘', '하부 물 샘', '하부 누수', '물이 셉니다']):
        topic = '화장실 관련'
        task = '세면대 누수 점검'
        return pd.Series([topic, task])

    return pd.Series([topic, task])


# 분류 적용
df[['주제', '작업유형']] = df['text'].apply(classify_final_final)

# 결과 저장
df.to_csv('voc_classified_result.csv', index=False)

